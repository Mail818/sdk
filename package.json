{
  "name": "@mail818/sdk",
  "version": "0.2.2",
  "type": "module",
  "description": "Mail818 JavaScript SDK for email collection forms",
  "main": "dist/mail818.umd.js",
  "module": "dist/mail818.esm.js",
  "browser": "dist/mail818.min.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "vite build && yarn build:loader",
    "build:cdn": "vite build --mode cdn && yarn build:loader",
    "build:dev": "vite build && yarn build:loader:dev",
    "build:loader": "vite build --config vite.config.loader.ts",
    "build:loader:dev": "vite build --config vite.config.loader.dev.ts",
    "clean": "rm -rf dist",
    "deploy:cdn": "yarn build && wrangler pages deploy dist --project-name=mail818-cdn",
    "deploy:cdn:preview": "yarn build && wrangler pages deploy dist --project-name=mail818-cdn --branch=preview",
    "dev": "vite build --watch",
    "dev:full": "yarn build && node scripts/serve-local.js",
    "dev:loader": "vite build --config vite.config.loader.dev.ts --watch",
    "dev:serve": "yarn build && yarn build:loader:dev && concurrently --kill-others \"yarn serve\" \"yarn dev\" \"yarn dev:loader\"",
    "docs": "typedoc --tsconfig tsconfig.docs.json --out ../../docs-output --name 'Mail818 SDK' --excludePrivate --excludeProtected --excludeInternal --includeVersion --gitRevision main src/index.ts",
    "docs:markdown": "typedoc --tsconfig tsconfig.docs.json --out ../../docs-output --name 'Mail818 SDK' --excludePrivate --excludeProtected --excludeInternal --includeVersion --gitRevision main --plugin typedoc-plugin-markdown src/index.ts",
    "lint": "eslint src",
    "prepublishOnly": "yarn build && yarn test",
    "serve": "node scripts/serve-local.js",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run test/e2e.test.ts",
    "test:integration": "vitest run test/integration.test.ts",
    "test:once": "vitest run",
    "test:performance": "vitest run test/performance.test.ts",
    "typecheck": "tsc --noEmit --project tsconfig.build.json"
  },
  "keywords": [
    "mail818",
    "email",
    "forms",
    "hugo",
    "static-site"
  ],
  "author": "Mail818",
  "license": "MIT",
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/node": "latest",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.57.1",
    "jsdom": "^22.1.0",
    "puppeteer": "latest",
    "typedoc": "^0.28.12",
    "typedoc-plugin-markdown": "^4.8.1",
    "typescript": "^5.3.0",
    "vite": "latest",
    "vitest": "latest"
  },
  "publishConfig": {
    "access": "public"
  }
}
